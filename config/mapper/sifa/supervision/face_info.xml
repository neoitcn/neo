<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aofa.sifa.mapper.supervision.FaceInfoDao">
	<sql id="faceInfoColumns">
		fi.id, fi.prisoner_id, fi.upload_id, fi.upload_time,
		fi.face_path, fi.similarity,
		fi.result, fi.creater_id, fi.create_time, fi.update_id, fi.update_time,
		fi.deleted
	</sql>
	<sql id="faceInfoColumns2">
		id, prisoner_id, upload_id, upload_time,
		face_path, similarity,
		result
	</sql>
	<resultMap type="BaseBean" id="baseBean">
		<result column="creater_id" property="createrId" />
		<result column="create_time" property="createTime" />
		<result column="update_id" property="updateId" />
		<result column="update_time" property="updateTime" />
		<result property="deleted" column="deleted" />
		<result property="enabled" column="enabled" />
	</resultMap>
	<resultMap id="faceInfoMap" type="FaceInfo">
		<id column="id" jdbcType="VARCHAR" property="id" />
		<result column="prisoner_id" jdbcType="VARCHAR" property="prisonerId" />
		<result column="upload_id" jdbcType="VARCHAR" property="uploadId" />
		<result column="upload_time" jdbcType="TIMESTAMP" property="uploadTime" />
		<result column="face_path" jdbcType="VARCHAR" property="facePath" />
		<result column="similarity" jdbcType="INTEGER" property="similarity" />
		<result column="result" jdbcType="INTEGER" property="result" />
	</resultMap>
	<select id="getFaceInfo" resultMap="faceInfoMap">
		select
			<include refid="faceInfoColumns" />
		from mo_face_info fi where fi.deleted=1
		
		<if test="rows > 0">
			limit #{start},#{rows}
		</if>
	</select>
	<select id="getCount" resultType="java.lang.Long">
		select
			count(id)
		from mo_face_info fi where fi.deleted=1
		
	</select>
	<select id="getFaceInfoById" resultMap="faceInfoMap">
		select
			<include refid="faceInfoColumns" />
		from mo_face_info fi where fi.deleted=1 and fi.id=#{id}
	</select>
	<insert id="addFaceInfo">
		insert into mo_face_info (
			<include refid="faceInfoColumns2" />
		)
		values (#{id,jdbcType=VARCHAR}, #{prisonerId,jdbcType=VARCHAR},
		#{uploadId,jdbcType=VARCHAR},
		#{uploadTime,jdbcType=TIMESTAMP}, #{facePath,jdbcType=VARCHAR},		
		#{similarity,jdbcType=INTEGER},
		#{result,jdbcType=INTEGER}	
	)
	</insert>
	
	<update id="deletedFaceInfo">
		update mo_face_info set deleted=0 where id=#{id}
	</update>
</mapper>