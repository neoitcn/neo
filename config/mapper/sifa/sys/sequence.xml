<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aofa.sys.dao.SequenceDao">
	<resultMap id="sequenceMap" type="Sequence">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="init_num" jdbcType="BIGINT" property="initNum" />
		<result column="sequence_num" jdbcType="BIGINT" property="sequenceNum" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="keyword" jdbcType="VARCHAR" property="keyword" />
	</resultMap>
	<sql id="sequenceColumns">
		id,init_num, sequence_num,name,keyword
	</sql>
	<select id="getSequenceById" resultMap="sequenceMap">
		select <include refid="sequenceColumns"></include>
		from sequence where id=#{id}
	</select>
	<select id="getSequenceByKey" resultMap="sequenceMap">
		select <include refid="sequenceColumns"></include>
		from sequence where keyword=#{keyword}
	</select>
	<insert id="addSequence">
		insert into sequence (<include refid="sequenceColumns"></include>)
		values (#{id,jdbcType=INTEGER}, #{initNum},#{sequenceNum,jdbcType=BIGINT},#{name},#{keyword})
	</insert>
	<update id="updateSequence">
		update sequence
		set
		init_num=#{initNum},
		name=#{name},
		keyword=#{keyword}
		where id = #{id,jdbcType=INTEGER}
	</update>
	<update id="setSequence">
		update sequence
		set sequence_num=#{sequenceNum}
		where id = #{id}
	</update>
	<!-- mysql中 +号运算符被自动转为数字类型相加计算结果 -->
	<update id="incSequence">
		update sequence
		set sequence_num=sequence_num+#{sequenceNum}
		where id = #{id}
	</update>
	<update id="clearSequence">
		update sequence
		set sequence_num=0
		where keyword = #{keyword}
	</update>
</mapper>